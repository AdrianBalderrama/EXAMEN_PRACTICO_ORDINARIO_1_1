<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".Main">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:text="Accion:"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:paddingLeft="15dp"
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Pi:"
            android:textColor="@color/colorPrimaryDark"/>

        <EditText

            android:id="@+id/edtTxtPi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Inserte PI"
            android:inputType="number" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        >

        <TextView
            android:paddingLeft="15dp"
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Radio:"
            android:textColor="@color/colorPrimaryDark"/>

        <EditText
            android:id="@+id/edtTxtRadio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Inserte Radio"
            android:inputType="number" />

    </LinearLayout>

    <RadioGroup
        android:paddingLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:id="@+id/rdGrp1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >

        <RadioButton
            android:id="@+id/rdBtnCalVol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Calcular Volumen"
            android:textColor="@color/colorPrimaryDark"/>

        <RadioButton
            android:id="@+id/rdBtnCalArea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Calcular Area"
            android:textColor="@color/colorPrimaryDark"/>

        <RadioButton
            android:id="@+id/rdBtnCalCunaEsf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Calcular volumen de Cuna esferica"
            android:textColor="@color/colorPrimaryDark"/>
    </RadioGroup>

    <LinearLayout
        android:id="@+id/txtVwM3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:paddingLeft="15dp"
            android:id="@+id/txtVwGrados"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Grados (n):"
            android:textSize="20dp"
            android:textColor="@color/colorPrimaryDark"/>

        <EditText

            android:id="@+id/edtTxtGrados"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Inserte Grados"
            android:inputType="number" />

        <TextView
            android:paddingLeft="15dp"
            android:id="@+id/txtVwm3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="m3"
            tools:text="m3"
            android:textSize="20dp"
            android:textColor="@color/colorPrimaryDark"/>
    </LinearLayout>

    <TextView
        android:paddingLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Resultados"
        android:textColor="@android:color/background_dark" />
    <LinearLayout
        android:id="@+id/txtVwM33"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Resultado:"
            android:textColor="@android:color/background_dark"
            android:paddingLeft="15dp"
            android:textColorLink="@color/colorAccent"
            android:paddingRight="30dp"/>

    <TextView

        android:id="@+id/txtVwResu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="RESULTADO"
        android:layout_marginRight="30dp"
        android:paddingRight="30dp"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnCalcular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_weight="1"
        android:text="Calcular"
        android:textColor="@color/colorPrimary" />

    <Button
        android:id="@+id/btnCerrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:text="Cerrar"
        android:textColor="@android:color/holo_red_dark" />

</LinearLayout>
